<div class="profile">

  <div class="user-form">
    <h2>Welcome, {{user.first_name}}!</h2>
    <div>
      <p>Your existing skills</p>
      <ul>
       {{#each user.Skills as |userSk|}}
                <li> {{userSk.skill_name}} -Level: {{userSk.UserSkill.level}} </li>
         {{/each}} </ul>
        </div>

   

    </div>


    <div class=" ">
      <div class="user-form">
        <h3>Add a new skill:</h3>

        <form class="form  new-skill-form">
          <div class="form-group">
            <label for="skill-name">skill name:</label>
            <select class="form-input" type="number" id="skill-name">
              <option placeholder="select"></option>
              <option value="1">HTML</option>
              <option value="2 ">CSS </option>
              <option value="2">JAVA SCRIPT</option>
              <option value="3">ActiveVFP </option>
              <option value="4">ASP</option>
              <option value="3">ASP.NET</option>
              <option value="6">.NET</option>
              <option value="7">Angular </option>
              <option value="8">C++ </option>
              <option value="9">AmazonAWS </option>
              <option value="10">SQL </option>
              <option value="11">R </option>
              <option value="12">React </option>
              <option value="13">Python </option>
              <option value="14">NodeJS </option>
              <option value="15">Ruby </option>
              <option value="16">C# </option>
              <option value="17">MongoDB </option>

            </select>

          </div>
          <div class="form-group">
            <label for="skill-level">level of skill :</label>
            <select class="form-input" type="text" id="skill-level">
              <option placeholder="select"></option>
              <option value="Expert">Expert</option>
              <option value="Intermediate ">Intermediate </option>
              <option value="Beginner">Beginner</option>



            </select>
         
          <div class="form-group">
            <button type="submit" class="btn ">Add skill</button>
          </div>
        </form>
      </div>
   <script src="./js/profile.js"></script>